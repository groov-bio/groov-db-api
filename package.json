{
  "name": "groov-api",
  "version": "1.0.0",
  "description": "GrooV API with local development setup",
  "type": "module",
  "scripts": {
    "start:local": "chmod +x ./start-local.sh && ./start-local.sh",
    "dynamo:start": "docker-compose up -d dynamodb-local",
    "s3:start": "docker-compose up -d s3-local",
    "setup:tables": "node scripts/setup-local.js",
    "sam:start": "sam local start-api --env-vars .env.json --warm-containers EAGER",
    "stop:local": "docker-compose down",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:watch": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
    "test:coverage": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.400.0",
    "@aws-sdk/client-s3": "^3.400.0",
    "@aws-sdk/client-ses": "^3.828.0",
    "@aws-sdk/lib-dynamodb": "^3.400.0",
    "aws-jwt-verify": "^5.1.0",
    "citation-js": "^0.7.19",
    "joi": "^17.13.3",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "aws-sdk-client-mock": "^4.0.0",
    "aws-sdk-client-mock-jest": "^4.0.0",
    "jest": "^29.7.0"
  }
}
